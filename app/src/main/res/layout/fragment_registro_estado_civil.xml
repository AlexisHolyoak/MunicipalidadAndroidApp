<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.gob.munihuacho.municipalidadhuacho.forms.RegistroEstadoCivilFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/encabezadopapeletas"
                android:id="@+id/imageView2"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:id="@+id/input_paternoReC"
                    android:hint="@string/apepaterno"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="normal|bold"
                    android:layout_weight="1"
                    android:selectAllOnFocus="false"
                    android:textAllCaps="false"
                    android:background="@drawable/edittextstyle"
                    android:layout_marginBottom="3dp"
                    android:keepScreenOn="false"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/gris" />

                <EditText
                    android:textColorHint="@color/gris"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:id="@+id/input_maternoReC"
                    android:layout_weight="1"
                    android:hint="@string/apematerno"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:background="@drawable/edittextstyle"
                    android:layout_marginBottom="3dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:textColorHint="@color/gris"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/input_nombreReC"
                    android:layout_weight="1"
                    android:hint="@string/nombre"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/edittextstyle"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:layout_marginBottom="3dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Spinner

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spOpcionesReC"
                        android:layout_weight="1"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="3dp"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <Button
                        android:text="@string/consultar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btnConsultarReC"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:background="@drawable/button_style"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/negro"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tablaHeaderReC">

                    </TableLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tablaContentReC">


                        </TableLayout>
                    </ScrollView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
