<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.muniappbeta.forms.RegistroEstadoCivilFragment"
    android:padding="16dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:id="@+id/input_paternoReC"
                    android:hint="@string/apepaterno"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="normal|bold"
                    android:layout_weight="1"
                    style="@android:style/Widget.DeviceDefault.EditText"
                    android:selectAllOnFocus="false"
                    android:textAllCaps="false"
                    android:background="@drawable/edittextstyle"
                    android:layout_marginBottom="3dp"
                    android:keepScreenOn="false" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:id="@+id/input_maternoReC"
                    android:layout_weight="1"
                    android:hint="@string/apematerno"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    style="@android:style/Widget.DeviceDefault.EditText"
                    android:background="@drawable/edittextstyle"
                    android:layout_marginBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/input_nombreReC"
                    android:layout_weight="1"
                    android:hint="@string/nombre"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/edittextstyle"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:layout_marginBottom="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spOpcionesReC"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_background"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <Button
                        android:text="@string/consultar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btnConsultarReC"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:background="@drawable/button_style"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tablaHeaderReC">

                    </TableLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tablaContentReC">


                        </TableLayout>
                    </ScrollView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
